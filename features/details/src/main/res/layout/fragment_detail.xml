<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="viewmodel"
                type="com.sunhurov.details.DetailViewModel"/>
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/fragment_detail_root_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:showWhenLoading="@{viewmodel.isLoading}"
            app:onRefreshListener="@{() -> viewmodel.reloadDataWhenForecastRefreshes()}">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <ImageView
                android:id="@+id/fragment_detail_avatar"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_placeholder"
                android:transitionName="@string/transition_avatar_orig"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ScrollView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fillViewport="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_detail_avatar">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/fragment_detail_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toTopOf="@+id/fragment_detail_ranking"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/imageView3"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="@dimen/default_icon_width"
                        android:layout_height="@dimen/default_icon_height"
                        android:layout_marginStart="16dp"
                        app:layout_constraintBottom_toBottomOf="@+id/fragment_detail_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/fragment_detail_title"
                        app:srcCompat="@drawable/ic_placeholder" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="@dimen/default_icon_width"
                        android:layout_height="@dimen/default_icon_height"
                        android:layout_marginStart="16dp"
                        app:layout_constraintBottom_toBottomOf="@+id/fragment_detail_ranking"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/fragment_detail_ranking"
                        app:srcCompat="@drawable/ic_placeholder" />

                    <TextView
                        android:id="@+id/fragment_detail_ranking"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintBottom_toTopOf="@+id/fragment_detail_release_date"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/imageView4"
                        app:layout_constraintTop_toBottomOf="@+id/fragment_detail_title" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="@dimen/default_icon_width"
                        android:layout_height="@dimen/default_icon_height"
                        android:layout_marginStart="16dp"
                        app:layout_constraintBottom_toBottomOf="@+id/fragment_detail_release_date"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/fragment_detail_release_date"
                        app:srcCompat="@drawable/ic_placeholder" />

                    <TextView
                        android:id="@+id/fragment_detail_release_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintBottom_toTopOf="@+id/fragment_detail_overview"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/imageView6"
                        app:layout_constraintTop_toBottomOf="@+id/fragment_detail_ranking" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="@dimen/default_icon_width"
                        android:layout_height="@dimen/default_icon_height"
                        android:layout_marginStart="16dp"
                        app:layout_constraintBottom_toBottomOf="@+id/fragment_detail_overview"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/fragment_detail_overview"
                        app:srcCompat="@drawable/ic_placeholder" />

                    <TextView
                        android:id="@+id/fragment_detail_overview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/imageView5"
                        app:layout_constraintTop_toBottomOf="@+id/fragment_detail_release_date" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>